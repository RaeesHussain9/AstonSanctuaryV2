  <div class="card card-body text-center">

    <h1 class="mt-4"><b>Staff Dashboard</b></h1>
    <h2 class="lead mb-3">Welcome <%= user.name %>, here you can see all pending requests for all users, and you can deny or approve them!</h2>
    
    </div>

<div class="card card-body text-center">

    <form action="/adoption/pendingRequests" method="POST">
        <div class="form-group">
            <label for="animalName"> <h2> Approve Or Deny A Request: </h2></label>
            <input
            type="AniName"
            id="AniName"
            name="AniName"
            class="form-control"
            placeholder="Enter Animal Name(watch out the input is case sensitive)"
          />
            </div>

        <div class="form-group">
        <input
        type="Uname"
        id="Uname"
        name="Uname"
        class="form-control"
        placeholder="Enter User's Name(watch out the input is case sensitive)"
      />
        </div>
  
  <button name = "AppDen" value = "Approved" type="submit" class="btn btn-success btn-info btn-lg">Approve</button>
  <button name = "AppDen" value = "Denied" type="submit" class="btn btn-danger btn-info btn-lg">Deny</button>
  </form>

    <div class="card card-body text-center">

    <u1>
        <% userReq_list.forEach(Request => {%>
          <h3>[=============================================================]</h3>
          <p class="lead mb-3"><b>Animal Name: <%= Request.name %></b></p>
          <p class="lead mb-3"><b>User who requested: <%= Request.whoRequested %> </b></p>
          <p class="lead mb-3"><b>Status of Decision: <%= Request.RequestStatus %> </b></p>
          <h3>[=============================================================]</h3>
        <%})%>
      </u1>

    </div>
</div>